                <!--END WIKIs -->

                <!-- START OF Fehler Beschreibung -->
                <materialDesign:Card Background="#FFF3EBEB" materialDesign:ShadowAssist.ShadowDepth="Depth4" Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="0 10 0 0" Grid.Column="1" Grid.Row="0">Fehler<LineBreak/>Beschreibung</TextBlock>
                    </Grid>

                </materialDesign:Card>

                <materialDesign:Card Grid.Row="2" Grid.Column="4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="20 0 10 20" Background="#FFEC8239">
                    <Button x:Name="card_FB" Background="{x:Null}" HorizontalAlignment="Stretch"  Height="auto" Click="redirect">
