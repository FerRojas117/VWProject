                <materialDesign:Card Grid.Row="2" Grid.Column="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="20 0 10 20" Background="#FFEC8239">
                    <Button x:Name="card_Wiki" Background="{x:Null}" HorizontalAlignment="Stretch"  Height="auto" Click="redirect">
