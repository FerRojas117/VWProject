                <!-- START OF Wiki -->
                <materialDesign:Card Background="#FFF3EBEB" materialDesign:ShadowAssist.ShadowDepth="Depth4" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
