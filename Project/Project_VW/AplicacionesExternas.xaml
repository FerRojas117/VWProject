                <materialDesign:Card Grid.Row="3" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="20 0 10 20" Background="#FFEC8239">
                    <Button x:Name="card_ODIS" Background="{x:Null}" HorizontalAlignment="Stretch"  Height="auto" Click="redirect">
